server {

    listen 80;
    server_name msepulveda.cl www.msepulveda.cl;
    charset utf-8;

    location /static {
        alias /www/static;
    }

    location /media {
        alias /www/media;
    }

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
    
    location / {
        proxy_pass http://web:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

}

server {
    listen 443 ssl;
    server_name msepulveda.cl;
    server_tokens off;

    ssl_certificate /etc/letsencrypt/live/msepulveda.cl/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/msepulveda.cl/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    
    location / {
        proxy_pass  http://msepulveda.cl;
        proxy_set_header    Host                $http_host;
        proxy_set_header    X-Real-IP           $remote_addr;
        proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;
    }
}